# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# File Storage Configuration
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
DATA_DIR=data

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Security (for production)
SECRET_KEY=your_secret_key_here

# Logging Configuration
