# Processing Configuration
DEFAULT_LANGUAGE=en-US
DEFAULT_VOICE_STYLE=natural

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
